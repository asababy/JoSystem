{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Launch WPF (.NET 9)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows/FileServerWPF.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "build Debug"
    },
    {
      "name": "Launch via dotnet (project)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/FileServerWPF.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "preLaunchTask": "build Debug"
    }
  ]
}

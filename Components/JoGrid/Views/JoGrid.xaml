<UserControl x:Class="JoSystem.Components.JoGrid.JoGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="400"
             FontFamily="{StaticResource GlobalFontFamily}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="PART_DataGrid"
                  Grid.Row="0"
                  SelectedItem="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=SelectedItem, Mode=TwoWay}"
                  AutoGenerateColumns="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=AutoGenerateColumns}"
                  IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsReadOnly}"
                  SelectionMode="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=SelectionMode}"
                  RowHeight="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=RowHeight}"
                  CanUserSortColumns="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=EnableSorting}"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"/>
        <StackPanel x:Name="PART_Pager" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0"
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=EnablePaging, Converter={StaticResource BoolToVisibilityConverter}}">
            <Button x:Name="PART_Prev" Width="80" Height="{StaticResource StandardControlHeight}" Style="{StaticResource SecondaryButtonStyle}" Content="上一页"/>
            <TextBlock x:Name="PART_PageInfo" VerticalAlignment="Center" Margin="10,0"/>
            <Button x:Name="PART_Next" Width="80" Height="{StaticResource StandardControlHeight}" Style="{StaticResource SecondaryButtonStyle}" Content="下一页"/>
        </StackPanel>
    </Grid>
</UserControl>

<Window x:Class="JoSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoSystem"
        xmlns:views="clr-namespace:JoSystem.Views"
        xmlns:vm="clr-namespace:JoSystem.ViewModels"
        mc:Ignorable="d" Closing="Window_Closing"
        Title="{DynamicResource Lang.Title}" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Microsoft YaHei UI, Segoe UI">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:SidebarView Grid.Column="0" DataContext="{Binding SidebarViewModel}"/>

        <Border Grid.Column="1" Background="White">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>

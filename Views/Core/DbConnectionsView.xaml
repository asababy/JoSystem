<UserControl x:Class="JoSystem.Views.Core.DbConnectionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoSystem.Views.Core"
             xmlns:vm="clr-namespace:JoSystem.ViewModels.Core"
             xmlns:jo="clr-namespace:JoSystem.Components.JoGrid"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}"
             FontFamily="{StaticResource GlobalFontFamily}">

    <UserControl.DataContext>
        <vm:DbConnectionsViewModel />
    </UserControl.DataContext>

    <Grid Margin="30">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="&#xE1DB;" FontFamily="Segoe MDL2 Assets" FontSize="20" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="{DynamicResource Lang.Settings.DbConnections}" Style="{StaticResource HeaderTextStyle}" Margin="0"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Command="{Binding ReloadCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,8,0" Height="{StaticResource StandardControlHeight}">
                            <TextBlock Text="{DynamicResource Lang.Settings.Reload}" VerticalAlignment="Center"/>
                        </Button>
                        <Button Command="{Binding AddCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="0,0,8,0" Height="{StaticResource StandardControlHeight}">
                            <TextBlock Text="{DynamicResource Lang.Settings.Add}" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="120" Height="{StaticResource StandardControlHeight}">
                            <TextBlock Text="{DynamicResource Lang.Settings.Save}" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <Expander Grid.Row="2" Margin="0,0,0,0" IsExpanded="True" BorderThickness="0" Padding="0">
                    <Expander.Header>
                        <TextBlock Text="{DynamicResource Lang.Settings.DbConnectionsSectionTitle}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Expander.Header>
                    <jo:JoGrid ItemsSource="{Binding DbConnections}"
                               SelectedItem="{Binding SelectedConnection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               AutoGenerateColumns="False"
                               ScrollViewer.HorizontalScrollBarVisibility="Auto"
                               Margin="0,2,0,0">
                        <DataGridTextColumn Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" IsReadOnly="True" Width="40">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="#"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Name}" Width="150">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.Name}"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Width="120">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.Provider}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding DataContext.ProviderOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedValue="{Binding Provider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              SelectedValuePath="Key"
                                              DisplayMemberPath="Value"
                                              VerticalContentAlignment="Center" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.ConnectionString}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ConnectionString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalContentAlignment="Center"
                                             TextWrapping="NoWrap"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridCheckBoxColumn Binding="{Binding Enabled}" Width="80">
                            <DataGridCheckBoxColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.Enabled}"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                        <DataGridTextColumn Binding="{Binding Order}" Width="80">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.Order}"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Width="180">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.Action}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Command="{Binding DataContext.TestCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Content="{DynamicResource Lang.Settings.TestConnection}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Padding="8,2" FontSize="12" Height="24" Margin="0,0,8,0"/>
                                        <Button Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Content="{DynamicResource Lang.Settings.Delete}"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="8,2" FontSize="12" Height="24"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </jo:JoGrid>
                </Expander>

                <Expander Grid.Row="3" Margin="0,8,0,0" IsExpanded="False" BorderThickness="0" Padding="0">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.QueryTitle}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SelectedConnection.Name}" Foreground="Red" FontWeight="Bold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Expander.Header>
                    <Grid Margin="0,2,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.SqlLabel}"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1"
                                Command="{Binding ExecuteSqlCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="120"
                                Height="{StaticResource StandardControlHeight}">
                            <TextBlock Text="{DynamicResource Lang.Settings.DbConnections.Execute}" VerticalAlignment="Center"/>
                        </Button>
                    </Grid>

                    <TextBox Grid.Row="1"
                             Text="{Binding SqlText, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Height="140"
                             Margin="0,6,0,6"/>

                    <TextBox Grid.Row="2"
                             Text="{Binding JsonResult}"
                             IsReadOnly="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             Height="200"
                             Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="3"
                               Text="{DynamicResource Lang.Settings.DbConnectionsHint}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"/>
                    </Grid>
                </Expander>
            </Grid>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="JoSystem.Views.Core.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JoSystem.Views.Core"
             xmlns:vm="clr-namespace:JoSystem.ViewModels.Core"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             FontFamily="{StaticResource GlobalFontFamily}">

    <UserControl.DataContext>
        <vm:LogViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题 -->
        <StackPanel Grid.Row="0" Margin="25,20,25,10">
            <TextBlock Text="{DynamicResource Lang.Logs.Title}" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,5"/>
            <TextBlock Text="{DynamicResource Lang.Logs.Subtitle}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="{StaticResource FontSizeSmall}"/>
        </StackPanel>

        <!-- 筛选栏 -->
        <Border Grid.Row="1" Margin="25,10" Style="{StaticResource CardStyle}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 搜索与时间 -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <!-- 关键词 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0" VerticalAlignment="Center">
                        <TextBox Width="180" Height="{StaticResource StandardControlHeight}" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" 
                                 ToolTip="{DynamicResource Lang.Logs.SearchTooltip}" Tag="{DynamicResource Lang.Logs.SearchPlaceholder}"/>
                    </StackPanel>

                    <!-- 时间范围 -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Grid Width="130" Height="{StaticResource StandardControlHeight}" VerticalAlignment="Center">
                            <DatePicker x:Name="StartDatePicker" SelectedDate="{Binding SearchStartTime}" Height="{StaticResource StandardControlHeight}" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource Lang.Logs.SelectDate}"  
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Stretch"
                                       Margin="3,2,25,2" 
                                       Padding="2,0,0,0"
                                       Background="{StaticResource SurfaceBrush}"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDate, ElementName=StartDatePicker}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <TextBlock Text="-" Margin="8,0" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                        
                        <Grid Width="130" Height="{StaticResource StandardControlHeight}" VerticalAlignment="Center">
                            <DatePicker x:Name="EndDatePicker" SelectedDate="{Binding SearchEndTime}" Height="{StaticResource StandardControlHeight}" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource Lang.Logs.SelectDate}" 
                                       IsHitTestVisible="False" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Stretch"
                                       Margin="3,2,25,2" 
                                       Padding="2,0,0,0"
                                       Background="{StaticResource SurfaceBrush}"
                                       Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedDate, ElementName=EndDatePicker}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    
                    <Button Command="{Binding SearchCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="80" Height="{StaticResource StandardControlHeight}" Margin="15,0,0,0">
                         <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource Lang.Logs.Query}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding OpenLogFolderCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Height="{StaticResource StandardControlHeight}" ToolTip="{DynamicResource Lang.Logs.OpenDirTooltip}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource Lang.Logs.OpenDir}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ClearCommand}" Style="{StaticResource DangerButtonStyle}" Height="{StaticResource StandardControlHeight}" ToolTip="{DynamicResource Lang.Logs.ClearTooltip}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{DynamicResource Lang.Logs.Clear}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 日志列表 -->
        <Grid Grid.Row="2" Margin="25,0,25,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Padding="0">
                <ListBox ItemsSource="{Binding LogItemsView}"
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei UI"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#F8F9FA"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#E6F2FF"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <!-- 分页控制栏 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0" 
                        Visibility="{Binding IsSearchView, Converter={StaticResource BoolToVisibilityConverter}}">
                <!-- 首页 -->
                <Button Command="{Binding FirstPageCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="40" Height="32" Padding="0" Margin="0,0,5,0" ToolTip="{DynamicResource Lang.Logs.FirstPage}">
                    <TextBlock Text="&#xE892;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
                
                <!-- 上一页 -->
                <Button Command="{Binding PrevPageCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="40" Height="32" Padding="0" ToolTip="{DynamicResource Lang.Logs.PrevPage}">
                    <TextBlock Text="&#xE00E;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>
                
                <!-- 页码显示 -->
                <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4" Margin="10,0" Padding="15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"/>
                        <TextBlock Text=" (" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text="{DynamicResource Lang.Logs.Total}" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text=": " VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text="{Binding TotalCount}" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                        <TextBlock Text=")" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- 下一页 -->
                <Button Command="{Binding NextPageCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="40" Height="32" Padding="0" ToolTip="{DynamicResource Lang.Logs.NextPage}">
                    <TextBlock Text="&#xE00F;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>

                <!-- 末页 -->
                <Button Command="{Binding LastPageCommand}" Style="{StaticResource SecondaryButtonStyle}" Width="40" Height="32" Padding="0" Margin="5,0,0,0" ToolTip="{DynamicResource Lang.Logs.LastPage}">
                    <TextBlock Text="&#xE893;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                </Button>

                <!-- 跳转 -->
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="{DynamicResource Lang.Logs.JumpTo}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding JumpPageText, UpdateSourceTrigger=PropertyChanged}" Width="45" Height="32" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Button Command="{Binding JumpCommand}" Style="{StaticResource SecondaryButtonStyle}" Content="GO" Margin="5,0,0,0" Width="40" Height="32"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

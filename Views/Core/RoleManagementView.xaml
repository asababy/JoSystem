<UserControl x:Class="JoSystem.Views.Core.RoleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JoSystem.Views.Core"
             xmlns:vm="clr-namespace:JoSystem.ViewModels.Core"
             xmlns:conv="clr-namespace:JoSystem.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}"
             FontFamily="{StaticResource GlobalFontFamily}">

    <UserControl.DataContext>
        <vm:RoleManagementViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <conv:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="30">
        <Border Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,25">
                    <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="20" VerticalAlignment="Center" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    <TextBlock Text="{DynamicResource Lang.Settings.RoleManagement}" Style="{StaticResource HeaderTextStyle}" Margin="0"/>
                </StackPanel>

                <!-- Left: Form -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
                    <TextBlock Text="{DynamicResource Lang.Settings.RoleName}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding NameInput, UpdateSourceTrigger=PropertyChanged}" Height="{StaticResource StandardControlHeight}"/>
                    
                    <TextBlock Text="{DynamicResource Lang.Settings.RoleDescription}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,15,0,5"/>
                    <TextBox Text="{Binding DescriptionInput, UpdateSourceTrigger=PropertyChanged}" Height="{StaticResource StandardControlHeight}"/>
                    
                    <Grid Margin="0,25,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Create Mode Buttons -->
                        <Button Grid.Column="0" Command="{Binding AddRoleCommand}" Content="{DynamicResource Lang.Settings.AddRole}" 
                                Style="{StaticResource PrimaryButtonStyle}" Height="{StaticResource StandardControlHeight}" Margin="0,0,5,0"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBoolToVisibilityConverter}}"/>
                        
                        <!-- Edit Mode Buttons -->
                        <Button Grid.Column="0" Command="{Binding UpdateRoleCommand}" Content="{DynamicResource Lang.Settings.UpdateRole}" 
                                Style="{StaticResource PrimaryButtonStyle}" Height="{StaticResource StandardControlHeight}" Margin="0,0,5,0"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                
                        <Button Grid.Column="1" Command="{Binding CancelEditCommand}" Content="{DynamicResource Lang.Settings.Cancel}" 
                                Style="{StaticResource SecondaryButtonStyle}" Height="{StaticResource StandardControlHeight}" Margin="5,0,0,0"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>

                <!-- Right: List -->
                <DataGrid x:Name="RoleDataGrid" Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" 
                          ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" IsReadOnly="True" Width="40"/>
                        <DataGridTextColumn Binding="{Binding Name}" IsReadOnly="True" Width="150">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.RoleName}"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding Description}" IsReadOnly="True" Width="*">
                            <DataGridTextColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.RoleDescription}"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTemplateColumn Width="80">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource Lang.Settings.Action}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.DeleteRoleCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                            CommandParameter="{Binding}"
                                            Content="{DynamicResource Lang.Settings.Delete}"
                                            Style="{StaticResource DangerButtonStyle}"
                                            Padding="8,2" FontSize="12" Height="24"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
